<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unilabs.vehiclerental.ViewController.ManageVehiclesController">
    <children>
        <Label text="Gestión de Vehículos" />

        <HBox spacing="10">
            <Label text="Matrícula: " />
            <TextField fx:id="txtMatricula" />
        </HBox>

        <HBox spacing="10">
            <Label text="Tipo de Vehículo: " />
            <ComboBox fx:id="comboBoxTipoVehiculo" />
        </HBox>

        <HBox spacing="10">
            <Label text="Marca: " />
            <TextField fx:id="txtMarca" />
        </HBox>

        <HBox spacing="10">
            <Label text="Modelo: " />
            <TextField fx:id="txtModelo" />
        </HBox>

        <HBox spacing="10">
            <Label text="Año: " />
            <TextField fx:id="txtAno" />
        </HBox>

        <HBox spacing="10">
            <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar" />
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" />
            <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" />
        </HBox>

        <ListView fx:id="listViewVehiculos" />

        <Button fx:id="btnVolver" text="Volver" onAction="#onVolver" />
    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>